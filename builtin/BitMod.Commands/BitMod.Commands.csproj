<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>bitmod_commands</AssemblyName>
        <Configurations>Debug;Release</Configurations>
        <Platforms>AnyCPU</Platforms>

        <OutDir>$(BitModDev)/plugins/$(AssemblyName)/</OutDir>
        <PublishDir>$(BitModBuild)/plugins/$(AssemblyName)/</PublishDir>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Private="true" Include="..\..\api\BitMod\BitMod.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Attributes\Inject\" />
    </ItemGroup>

</Project>
